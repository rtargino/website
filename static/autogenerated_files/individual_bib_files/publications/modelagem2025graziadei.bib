@article{modelagem2025graziadei,
 abstract = {No Brasil, a soja se destaca como a cultura mais importante em um setor essencial para o país. A previsão para a safra de 2023/2024 é de uma produção superior a 160 milhões de toneladas, equivalente à produção combinada dos países da OCDE. Contudo, sua produção enfrenta vulnerabilidades climáticasque impactam tanto a produtividade quanto os preços do seguro rural. Regiões Sul e Centro-Oeste têm sofrido com secas ou excesso de chuvas, afetando gravemente as colheitas e aumentando a sinistralidade das seguradoras. Neste estudo, utilizamos modelos de aprendizagem atuarial para prever perdas nas lavouras de soja, considerando variáveis climáticas como precipitação e temperatura. Foram comparados modelos lineares generalizados, modelos aditivos generalizados e floresta aleatória,aplicados tanto para a ocorrência de sinistros quanto para a severidade. O desempenho preditivo dos modelos foi avaliado e, com base no modelo mais adequado, extrapolamos as perdas para medir a quebra de produtividade em propriedades com e sem seguro, por município e em nível nacional. Os resultados indicam caminhos práticos para a precificação, gestão de riscos, regulação e formulação de políticas públicas agrícolas.},
 author = {Graziadei, Helton and Fraga L. de Melo, Eduardo and Targino, Rodrigo S.},
 issue = {33},
 journal = {Revista Brasileira de Riscos e Seguros},
 pages = {1--22},
 title = {Modelagem Atuarial de Perdas em Apólices de Seguro de Soja no Brasil},
 url = {https://doi.org/10.65444/RBRS.v19.n33.art01},
 volume = {19},
 year = {2025}
}
