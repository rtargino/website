@article{inteligencia2025graziadei,
 abstract = {A disponibilidade de dados de planos de previdência, especialmente em ecossistemas como o Open Insurance, pode proporcionar inúmeros benefícios para as sociedades seguradoras que operam com anuidades. Afinal, seja para avaliar a situação financeira de um plano ou para dimensionar adequadamente o preço de uma renda vitalícia, é essencial considerar projeções de mortalidade, de forma que o risco de longevidade seja devidamente incorporado aos fluxos de caixa futuros. Nesta curta comunicação, empregamos modelos de inteligência artificial (IA) para realizar previsões de mortalidade de uma população relevante de planos de previdência. Essa abordagem envolve o uso de algoritmos e modelos computacionais avançados para analisar grandes conjuntos de dados atuariais, como aqueles que podem ser integrados em ambientes de dados abertos, a exemplo do Open Insurance. Os resultados obtidos indicam que diversos desses métodos apresentaram desempenho competitivo e podem ser de utilidade para projeção de mortalidade.},
 author = {Fraga L. de Melo, Eduardo and Graziadei, Helton and Targino, Rodrigo S.},
 issue = {33},
 journal = {Revista Brasileira de Riscos e Seguros},
 pages = {120--137},
 title = {Inteligência Artificial para Previsão de Mortalidade usando Dados de Planos de Previdência},
 url = {https://doi.org/10.65444/rbrs.v19.n33.art08},
 volume = {19},
 year = {2025}
}
